{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": false,
    "outDir": "../dist/server",
    "rootDir": ".",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": false
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
